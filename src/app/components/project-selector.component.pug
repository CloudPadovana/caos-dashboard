.container-fluid
  .row
    .col-md-3
      div(dropdown, autoClose="outsideClick")
        .input-group.input-group-sm(dropdownToggle, [addToggleClass]="false")
          span.input-group-addon
            i.fa.fa-search
          input.form-control(type="text", placeholder="Select projects...", [(ngModel)]="search_text")
          span.input-group-btn(*ngIf="search_text")
            button.btn.btn-default.close(type="button", (click)="clear_search()")
              i.fa.fa-fw.fa-times

        div(dropdownMenu, role="menu")
          button.dropdown-item(role="menuitem", (click)="select_all()")
            span.fa.fa-fw.fa-check
            | Select All

          button.dropdown-item(role="menuitem", (click)="unselect_all()")
            span.fa.fa-fw.fa-times
            | Unselect All

          .dropdown-divider

          .scrollable-menu
            button.dropdown-item(*ngFor="let p of searched_projects", role="menuitem", (click)="toggle_selected(p)")
              span.fa.fa-fw([class.fa-check]="is_selected(p)")
              | {{ p.name }}

    .col-md-9
      p No project selected
      span.project-tag(*ngFor="let p of selected_projects")
        | {{ p.name }}
        button.close.btn-xs(type="button", (click)="toggle_selected(p)")
          span.fa.fa-fw.fa-border.fa-times
