{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "diagnostics": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": false,
    "noExternalResolve": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noLib": false,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "exclude": [
    "node_modules",
    "typings/index.d.ts",
    "typings/globals",
    "src"
  ],
  "compileOnSave": false
}
