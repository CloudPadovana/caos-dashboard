table.table.table-bordered.table-hover
  thead.thead-inverse
    th
      | Project
      .btn-group.pull-right
        button.btn.btn-secondary.btn-xs(type="button", (click)="sort('project.name', true)", [class.active]="is_sorting('project.name', true)")
          i.fa.fa-chevron-down

        button.btn.btn-secondary.btn-xs(type="button", (click)="sort('project.name', false)", [class.active]="is_sorting('project.name', false)")
          i.fa.fa-chevron-up

    th
      | Sum [hours]
      .btn-group.pull-right
        button.btn.btn-secondary.btn-xs(type="button", (click)="sort('value', true)", [class.active]="is_sorting('value', true)")
          i.fa.fa-chevron-down

        button.btn.btn-secondary.btn-xs(type="button", (click)="sort('value', false)", [class.active]="is_sorting('value', false)")
          i.fa.fa-chevron-up


    th
      | Ratio
      .btn-group.pull-right
        button.btn.btn-secondary.btn-xs(type="button", (click)="sort('percent', true)", [class.active]="is_sorting('percent', true)")
          i.fa.fa-chevron-down

        button.btn.btn-secondary.btn-xs(type="button", (click)="sort('percent', false)", [class.active]="is_sorting('percent', false)")
          i.fa.fa-chevron-up

  tbody
    tr(*ngFor="let r of rows")
      td {{ r.project.name }}
      td {{ r.value/3600 | number: '1.2-2' }}
      td {{ r.percent | percent: '1.2-2' }}
